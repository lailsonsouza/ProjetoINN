@{
    ViewData["Title"] = "Adicionar Categoria";
}

<div class="text-center">
    <h1 class="display-4">Adicionar Nova Categoria</h1>
</div>

<form>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="Categoria">Categoria</label>
            <input type="text" class="form-control" id="inputEmail4" placeholder="Categoria">
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <button type="submit" class="btn btn-secondary btn-block" asp-controller="Cadastro" asp-action="Index" role="button">Voltar</button>
</form>